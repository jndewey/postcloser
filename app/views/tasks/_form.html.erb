

<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: "Task Summary" %>
    <%= f.input :status, label: "Current Status" %>
    <%= f.input :assignee, collection: User.all, label_method: :email, prompt: "Choose an Assignee" %>
    <%= f.input :deadline, label: "Deadline:" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
